<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/button_start_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_stop_alarm"
            android:layout_marginBottom="16dp"
            android:onClick="startAlarm"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="#1EBEA5"
            android:text="iniciar alarm manager"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_stop_alarm"
            android:onClick="stopAlarm"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="@id/button_start_alarm"
            app:layout_constraintEnd_toEndOf="@id/button_start_alarm"
            app:layout_constraintBottom_toTopOf="@id/imageview_cup_icon"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#FD82AB"
            android:text="parar alarm manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/imageview_cup_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/beer_outline"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/imageview_battery"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_battery_charging_full_black_24dp"/>



    <TextView
            android:id="@+id/textview_quantity"
            android:contentDescription="@string/description_water_cup"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageview_cup_icon"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="0"/>

    <TextView
            android:id="@+id/textview_charging_reminder"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="lembrete enquanto carrega"
            app:layout_constraintBottom_toTopOf="@id/textview_stretching_reminder"/>

    <TextView
            android:id="@+id/textview_stretching_reminder"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Total de alongamentos: 0"
            app:layout_constraintBottom_toTopOf="@id/textview_tip"/>

    <TextView
            android:id="@+id/textview_tip"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drink_water_tip"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>